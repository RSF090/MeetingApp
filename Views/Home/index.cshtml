@model MeetingInfo;
@{
    ViewBag.Title = "Başvuru Ekranı";
    Layout = "_Layout2";
}

<h1 class="h4">@ViewBag.Selamlama ,@ViewBag.Username</h1>
<p>Toplantı katıllımı durumunuzu bildiriniz</p>
<div class="card my-2">
    <ul class="class list-group list-group-flush">
        <li class="list-group-item">
            @Model.Location
        </li>
        <li class="list-group-item">
            @Model.Date.ToString("dd/MM/yyyy HH:mm:ss") Tarihinde Gerçekleşecek
        </li>
        <li class="list-group-item">
            @Model.numberOfPeople Katılımcı
        </li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply" >Başvuru Yap</a>