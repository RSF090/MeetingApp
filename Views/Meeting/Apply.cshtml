@{
    ViewBag.Title = "Başvuru Formu";
}

<h1 class="h4 text-center my-4">Toplantı Katılım Formu</h1>

<form action="" method="post" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
        <label for="Name" class="form-label">Ad Soyad</label>
        <input type="text" name="Name" id="Name" class="form-control" placeholder="Adınızı girin">
    </div>

    <div class="mb-3">
        <label for="Phone" class="form-label">Telefon</label>
        <input type="text" name="Phone" id="Phone" class="form-control" placeholder="05xx xxx xx xx">
    </div>

    <div class="mb-3">
        <label for="e-mail" class="form-label">E-posta</label>
        <input type="email" name="e-mail" id="e-mail" class="form-control" placeholder="mail@example.com">
    </div>

    <div class="mb-3">
        <label for="WillAttent" class="form-label">Katılım Durumu</label>
        <select name="WillAttent" id="WillAttent" class="form-select">
            <option value="true">Evet, geliyorum</option>
            <option value="false">Hayır, gelemiyorum</option>
        </select>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Kaydet</button>
    </div>
</form>
