@model List<UserInfo>
@{
    ViewBag.Title = "Toplatıya katılım Listesi";
 
}
<main class="text-center">
<h1 class="h4">Toplatıya katılım Listesi</h1>

<table class="table table-bordered ">
    <tr>
        <td>Adı</td>
        <td>Katılım Durumu</td>
        <td>Detay</td>
    </tr>
    <thead>
        <tbody>
            @{ int i = 0; }
       @foreach (var user in Model){
        var durum = user.WillAttend == true ? "Evet" : "Hayır";
        var className = user.WillAttend == true ? "table-success" : "table-danger";
            if(user.WillAttend== true)
            {
                i++;
            }
            <tr class="@className">
                <td>@user.Name</td>
                <td>@durum</td>
                <td>
                <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                </td>
            </tr>}
        </tbody>
    </thead>
</table>
<div class="card">
    <div class="card-body">
        <spn>Katılımcı Sayısı: @i</spn>
    </div>
</div>
</main>